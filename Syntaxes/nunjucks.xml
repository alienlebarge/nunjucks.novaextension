<?xml version="1.0" encoding="UTF-8"?>
<syntax name="nunjucks">
    <meta>
        <name>Nunjucks</name>
        <type>markup</type>
        <preferred-file-extension>njk</preferred-file-extension>
        <default-extension>njk</default-extension>
        <parent>HTML</parent>
    </meta>
    
    <detectors>
        <extension priority="1.0">njk,nunjucks</extension>
    </detectors>
    
    <indentation>
        <increase>
            <expression>^\s*&lt;(([^!/?]|%)(?!.+?([/%]&gt;|&lt;/.+?&gt;))|[%!]--\s*$)</expression>
        </increase>
        <decrease>
            <expression>^\s*(&lt;/[^&gt;]+&gt;|--&gt;|--%&gt;)</expression>
        </decrease>
    </indentation>
    
    <comments>
        <multiline>
            <starts-with>
                <expression>{#</expression>
            </starts-with>
            <ends-with>
                <expression>#}</expression>
            </ends-with>
        </multiline>
    </comments>
    
    <brackets>
        <pair open="{{" close="}}" />
        <pair open="{\%" close="\%}" />
        <pair open="{\#" close="\#}" />
    </brackets>
    
    <surrounding-pairs>
        <pair open="&lt;" close="&gt;" />
        <pair open="{{" close="}}" />
        <pair open="{%" close="%}" />
        <pair open="{#" close="#}" />
        <pair open="[" close="]" />
        <pair open="(" close=")" />
        <pair open="&apos;" close="&apos;" />
        <pair open="&quot;" close="&quot;" />
        <pair open="`" close="`" />
    </surrounding-pairs>
    
    <scopes>
        <include syntax="self" collection="blocks" />
        <include syntax="self" collection="tags" />
        <include syntax="self" collection="filters" />
    </scopes>    
    
    <collections>
    
        <!-- Blocks -->
        <collection name="blocks">
            <scope name="nunjucks.block">
                <starts-with>
                    <expression>\{\#</expression>
                    <capture number="0" name="njk.block.bracket" />
                </starts-with>
                <ends-with>
                    <expression>\#\}</expression>
                    <capture number="0" name="njk.block.bracket" />
                </ends-with>
            </scope>
        </collection>
        
        <!-- Keywords -->
        <collection name="tags">
            <scope name="nunjucks.tag">
                <strings>
                    <string>if</string>
                    <string>else</string>
                    <string>elif</string>
                    <string>endif</string>
                    <string>is</string>
                    <string>not</string>
                    
                    <string>for</string>
                    <string>in</string>
                    <string>recursive</string>
                    <string>endfor</string>
                    
                    <string>raw</string>
                    <string> endraw</string>
                    
                    <string>block</string>
                    <string>endblock</string>
                    <string>extends</string>
                    <string>super</string>
                    <string>scoped</string>
                    
                    <string>macro</string>
                    <string>endmacro</string>
                    <string>call</string>
                    <string>endcall</string>
                    
                    <string>from</string>
                    <string>import</string>
                    <string>as</string>
                    <string>do</string>
                    <string>continue</string>
                    <string>break</string>
                    
                    <string>filter</string>
                    <string>endfilter</string>
                    <string>set</string>
                    
                    <string>include</string>
                    <string>ignore</string>
                    <string>missing</string>
                    
                    <string>with</string>
                    <string>without</string>
                    <string>context</string>
                    <string>endwith</string>
                    
                    <string>trans</string>
                    <string>endtrans</string>
                    <string>pluralize</string>
                    
                    <string>autoescape</string>
                    <string>endautoescape</string>
                </strings>
            </scope>
        </collection>
        
        <!-- Filters -->
        <collection name="filters">
            <scope name="nunjucks.filter">
                <strings>
                    <string>abs</string>
                    <string>attr</string>
                    <string>batch</string>
                    <string>capitalize</string>
                    <string>center</string>
                    <string>default</string>
                    
                    <string>dictsort</string>
                    <string>escape</string>
                    <string>filesizeformat</string>
                    <string>first</string>
                    <string>float</string>
                    <string>forceescape</string>
                    <string>format</string>
                    <string>groupby</string>
                    <string>indent</string>
                    
                    <string>int</string>
                    <string>join</string>
                    <string>last</string>
                    <string>length</string>
                    <string>list</string>
                    <string>lower</string>
                    <string>pprint</string>
                    
                    <string>random</string>
                    <string>replace</string>
                    <string>reverse</string>
                    <string>round</string>
                    <string>safe</string>
                    <string>slice</string>
                    
                    <string>sort</string>
                    <string>string</string>
                    <string>striptags</string>
                    <string>sum</string>
                    
                    <string>title</string>
                    <string>trim</string>
                    <string>truncate</string>
                    <string>upper</string>
                    <string>urlize</string>
                    <string>wordcount</string>
                    <string>wordwrap</string>
                </strings>
            </scope>
        </collection>
        
    </collections>
</syntax>
